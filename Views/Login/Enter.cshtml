@using EstudiantesAPP.Transporte;

@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
@model AccesoDTO

<form method="post" asp-action="Enter" asp-controller="Login">
    <img class="mb-4" src="~/img/Login.png" alt="" width="72" height="72">
    <h1 class="h3 mb-3 fw-normal">Ingrese su usuario</h1>

    <div class="form-floating">
        <input type="email" class="form-control" required asp-for="Email" placeholder="name@example.com">
        <label for="email">Correo</label>
    </div>
    <div class="form-floating">
        <input type="password" class="form-control" required asp-for="Password" placeholder="Password">
        <label for="password">Contraseña</label>
    </div>
    <div class="checkbox mb-1" style="padding-top: .2cm">
        <label>
            <input type="checkbox" asp-for="MantenerActivo"/> Recordar Sesion
        </label>
    </div>
    <div style="padding-top: .2cm">
        <button class="btn btn-primary w-100 py-2" type="submit">Ingresar</button>
    </div>
    <div style="padding-top: .3cm">
        <label class="alert-danger">@ViewBag.Error</label>
    </div>
</form>